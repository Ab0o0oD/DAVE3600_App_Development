<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MapActivity" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_selector_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="10dp"
        android:background="#fff" >

        <TextView
            android:id="@+id/text_view_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:text="@string/building"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner_buildings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="@+id/text_view_building"
            app:layout_constraintStart_toStartOf="@+id/text_view_building"
            app:layout_constraintTop_toBottomOf="@+id/text_view_building" />

        <TextView
            android:id="@+id/text_view_floors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="@string/floor"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_view_building"
            app:layout_constraintStart_toEndOf="@+id/text_view_building" />

        <Spinner
            android:id="@+id/spinner_floors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="@+id/text_view_floors"
            app:layout_constraintStart_toStartOf="@+id/text_view_floors"
            app:layout_constraintTop_toBottomOf="@+id/text_view_floors" />

        <TextView
            android:id="@+id/text_view_rooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:text="@string/room"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_view_building"
            app:layout_constraintStart_toEndOf="@+id/text_view_floors" />

        <Spinner
            android:id="@+id/spinner_rooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="@+id/text_view_rooms"
            app:layout_constraintStart_toStartOf="@+id/text_view_rooms"
            app:layout_constraintTop_toBottomOf="@+id/text_view_rooms" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/image_view_center_position"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/map_selector_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_gps" />

    <TextView
        android:id="@+id/text_view_go_to_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_center_position"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:text="@string/go_to_user_text"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_view_center_building"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text_view_go_to_user"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_building_black" />

    <TextView
        android:id="@+id/text_view_go_to_building"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_center_building"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:text="@string/find_building"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floating_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="#da3c2f"
        fab:menu_colorPressed="#dc4b3f"
        fab:menu_colorRipple="#99d4d4d4"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/ic_settings_white"
        fab:menu_labels_colorNormal="#333"
        fab:menu_labels_colorPressed="#444"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#66aff198"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="4dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_action_menu_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_building_white"
            fab:fab_label="Add Building"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_action_menu_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_room_white"
            fab:fab_label="Add Room"
            fab:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>




</RelativeLayout>