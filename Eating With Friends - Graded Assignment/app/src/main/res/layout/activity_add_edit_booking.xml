<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".activities.AddEditBookingActivity">

        <Spinner
            android:id="@+id/spinner_restaurants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/button_select_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/spinner_restaurants"
            android:text="Select"/>

        <TextView
            android:id="@+id/text_view_chosen_restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chosen Restaruant"
            android:layout_below="@id/button_select_restaurant"
            android:inputType="text"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/image_view_select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_date_black"
            android:layout_below="@id/text_view_chosen_restaurant"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_select_date"
            android:layout_below="@id/text_view_chosen_restaurant"
            android:hint="25. Oct 2019"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/image_view_select_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_time_black"
            android:layout_toEndOf="@+id/text_view_date"
            android:layout_below="@id/text_view_chosen_restaurant"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_select_time"
            android:layout_below="@id/text_view_chosen_restaurant"
            android:hint="12:00"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/text_view_selected_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_time"
            android:hint="Selected Friends Will Be Listed Here!"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/button_select_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_selected_friends"
            android:layout_marginTop="20dp"
            android:text="Select Friends" />

        <Button
            android:id="@+id/button_save_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_selected_friends"
            android:layout_toEndOf="@id/button_select_friend"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:text="Save Booking"/>

    </RelativeLayout>
</ScrollView>