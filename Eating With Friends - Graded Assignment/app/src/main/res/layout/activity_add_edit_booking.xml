<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".activities.AddEditBookingActivity">

        <Spinner
            android:id="@+id/spinner_restaurants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/text_view_select_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/spinner_restaurants"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:text="Choose Restaurant" />

        <ImageView
            android:id="@+id/image_view_select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_date_black"
            android:layout_below="@id/spinner_restaurants"
            android:layout_marginTop="20dp"
            android:contentDescription="Date Icon" />

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_select_date"
            android:layout_below="@id/spinner_restaurants"
            android:hint="Select Date"
            android:layout_marginStart="10dp"
            android:layout_marginTop="22dp"/>

        <ImageView
            android:id="@+id/image_view_select_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_time_black"
            android:layout_toEndOf="@+id/text_view_date"
            android:layout_below="@id/spinner_restaurants"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Time icon" />

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_select_time"
            android:layout_below="@+id/spinner_restaurants"
            android:hint="Select Time"
            android:layout_marginStart="10dp"
            android:layout_marginTop="22dp"/>

        <ImageView
            android:id="@+id/image_view_select_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_select_date"
            android:background="@drawable/ic_friends"
            android:layout_marginTop="20dp"
            android:contentDescription="Friends Icon" />

        <TextView
            android:id="@+id/text_view_select_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_select_date"
            android:layout_toEndOf="@+id/image_view_select_friends"
            android:layout_marginTop="22dp"
            android:layout_marginStart="10dp"
            android:text="Select Friends" />

        <TextView
            android:id="@+id/text_view_selected_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_select_friends"
            android:hint="Selected Friends Will Be Listed Here!"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/button_save_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_selected_friends"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Save Booking"/>

    </RelativeLayout>
</ScrollView>