<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activities.AddEditFriendActivity">

    <EditText
        android:id="@+id/edit_text_friend_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Given Name"
        android:layout_alignParentStart="true"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_friend_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_friend_first_name"
        android:layout_marginTop="10dp"
        android:hint="Lastname"/>

    <EditText
        android:id="@+id/edit_text_friend_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_friend_last_name"
        android:layout_marginTop="10dp"
        android:hint="Phonenumber"/>

    <Button
        android:id="@+id/button_save_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_friend_phone"
        android:layout_marginTop="20dp"
        android:text="Save"/>

</RelativeLayout>